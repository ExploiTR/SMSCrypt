<resources>
    <!-- Base application theme. -->
    <style name="Theme.SMSCrypt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_500
        </item> <!-- todo  Change the color respective to primary : do instrumentation tests-->
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/montserrat</item>

        <item name="snackbarStyle">@style/PaddedSnackStyle</item>
    </style>

    <style name="PaddedSnackStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">64dp</item>
    </style>

</resources>